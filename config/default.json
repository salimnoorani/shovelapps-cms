{
  "installed": true,
  //--- DEPRECATED: -------
  //"theme": "bootstrap-3-jade",
  "theme": "onsenui",
  //"theme": "framework7",
  "app": {
    "appName": "Awesome App"
  },
  //-----------------------
  // If "availableApps" is greater than one, the CMS will then be multitenant, 
  // otherwise it will be dedicated to a single app
  "availableApps": 1,
  "paths": {
    "themesBase": "themes",
    "adminThemeBase": "themes/admin"
  },
  "session": {
    "salt": "$2a$10$phUYETiJArxNIGLh6P.ZSe",
    "secret": "shovelapps-cms",
    "jsonstore": {
      "filename": "session.json",
      "path": "filestorage/.session"
    }
  },
  "initializer":
  {
    "mongoUrl": "mongodb://localhost:27017/shovelapps-development",
    "encrypter": {
      "key": "keystring",
      "algorithm": "aes256"
    },
    "defaultUser":
    {
      "username" : "admin",
      "password" : "admin"
    }
  },
  "localization": {
    "locales": ["en", "es", "fr", "de", "ja", "pt"],
    "directory": "./config/locales"
  },
  "packager": {
    "resourcesPath": "res",
    "htmlBasePath": "www",
    "zipFilename": "shovelapps-cms",
    "zipPrefix": "app-",
    "zipPostfix": "-shovelapps"
  },
  "backend": {
    // should be a reachable url for the shipped app in order to communicate to the backend to fetch dynamic content.
    // if testing the app in the same network, a local ip address like 192.168.X.XXX might be used.
    "baseUrl": ""
  },
  "platform": {
    "shovelappsPlatformUrl": "http://platform.shovelapps.com"
  },
  "filestorage": {
    "basePath": "filestorage"
  }
}