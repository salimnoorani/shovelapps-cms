extend ../../themes/admin/layout 

block title
  title Shovel apps CMS - #{__('My Screens')}

block content
  .container-fluid.bg-white.cms(role='main')
    .header.center-block.row.voffset6
      a.back-button.pull-left(href='#')
      .col-md-6.col-md-offset-2
        h2 #{__('My Screens')}
        .search
          input(type='text', placeholder='#{__("Search")}')
      .col-md-3
        a.addNewScreen(href='/admin/screens/new')
          

    if screens.length
      .row.center-block.voffset5.text-left
        .col-md-8.col-md-offset-2.categories
          .categorie.clearfix
            h3 Uncategorized
            select#selectMain.form-control.pull-right
              option(value="-1") #{__('Select main screen')}
              each screen in screens
                if screen.isMain == "true"
                  option(selected="selected", value=screen.id)=screen.title
                else
                  option(value=screen.id)=screen.title
          .row.screens
            each screen in screens
              .screen(data-id=screen.id)
                a(href='/admin/screens/#{screen.id}')
                  img(src='/coreassets/assets/elmeme.jpg')
                  h4=screen.title
                .options
                  a.publish(href='#')
                  a.delete(href='#')

    .voffset6

block stylesheets
block scripts
  script(src="screens/js/jquery.rest.min.js")
  script(src="screens/js/setmain.js")
  script(src="screens/js/screenoptions.js")


